<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="2"
    android:background="@color/menu_background"
    tools:context="com.par.projectaugmentedreality.QuizAnswerScreen"
    tools:ignore="MissingPrefix">


    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="166dp"
            android:layout_height="44dp"
            android:id="@+id/resultSpinner"
            android:layout_gravity="bottom"
            android:minHeight="20dp"
            android:minWidth="150dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/correct_answer"
        android:layout_marginRight="4dp" />

    <TextView
        android:id="@+id/correct_answer_header"
        fontPath="fonts/VAG_Rounded_Bold.ttf"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_weight="1"
        android:textColor="@color/white"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/correct_answer"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/correct_answer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/given_answer_header"
        fontPath="fonts/VAG_Rounded_Bold.ttf"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="@color/white"
        app:layout_constraintRight_toLeftOf="@+id/correct_answer_header"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/correct_answer_header"
        android:layout_marginEnd="13dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/correct_answer_header"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="13dp" />

    <TextView
        android:id="@+id/correct_answer"
        fontPath="fonts/VAG_Rounded_Light.ttf"
        android:layout_width="0dp"
        android:layout_height="411dp"
        android:layout_gravity="top"
        android:layout_weight="1"
        android:textColor="@color/white"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/resultSpinner"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/correct_answer_header"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/resultSpinner"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/answer_text"
        fontPath="fonts/VAG_Rounded_Light.ttf"
        android:layout_width="0dp"
        android:layout_height="411dp"
        android:layout_gravity="top"
        android:layout_weight="1"
        android:textColor="@color/white"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/given_answer_header"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/given_answer_header"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/given_answer_header" />

    <TextView
        android:id="@+id/resultText"
        fontPath="fonts/VAG_Rounded_Bold.ttf"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="bottom|left"
        android:gravity="bottom"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintRight_toLeftOf="@+id/resultSpinner"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/resultSpinner"
        android:layout_marginEnd="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/resultSpinner"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="@string/quiz_back_button"
        fontPath="frons/VAG_Rounded_Bold.ttf"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:background="@color/title_bar_blue"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="13dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:onClick="backButton"
      />

</android.support.constraint.ConstraintLayout>
