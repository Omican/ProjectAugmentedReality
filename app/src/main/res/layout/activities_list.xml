<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:backgroundTint="@color/menu_background"
        xmlns:tools="http://schemas.android.com/tools"
        tools:ignore="MissingPrefix"
	>


    <TextView android:id="@+id/activities_list_title"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:textSize="@dimen/menu_title"
              android:padding="@dimen/menu_title_padding"
              android:backgroundTint="@color/title_bar_blue"
              android:background="@color/light_gray"
              fontPath="fonts/VAG_Rounded_Bold.ttf"
              android:textColor="@color/white"
              android:textStyle="bold"
              android:text="@string/title_quizzar"/>

    <TextView
        android:id="@+id/activities_menu_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="@dimen/menu_start_quizzar"
        android:padding="@dimen/menu_start_quizzar_padding"
        android:textColor="@color/white"
        fontPath="fonts/VAG_Rounded_Bold.ttf"
        android:text="@string/menu_start_scan"
        android:onClick="onStartScanClick"
        android:layout_weight="1"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="5dp"
        android:src="@drawable/quizzar_nobackground" />



    
</LinearLayout>

